{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "timezone": "America/New_York",

  "prConcurrentLimit": 0,

  "prHourlyLimit": 5,

  "minimumReleaseAge": "3 days",

  "rebaseWhen": "never",

  "labels": ["dependencies"],

  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["at any time"],
    "minor": {
      "description": "A minor bump to a lockfile dependency should cause a minor bump in this package's version",
      "semanticCommitType": "feat"
    },
    "patch": {
      "description": "A patch bump to a lockfile dependency should cause a patch bump in this package's version",
      "semanticCommitType": "fix"
    }
  },

  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },

  "packageRules": [
    {
      "description": "handle internal dependencies first (higher priority) and exempt them from stabilityDays requirement",
      "matchSourceUrlPrefixes": [
        "git+https://github.com/scratchfoundation/",
        "git+ssh://git@github.com/scratchfoundation/",
        "git://github.com/scratchfoundation/",
        "git@github.com:scratchfoundation/",
        "https://github.com/scratchfoundation/",
        "git+https://github.com/LLK/",
        "git+ssh://git@github.com/LLK/",
        "git://github.com/LLK/",
        "git@github.com:LLK/",
        "https://github.com/LLK/"
      ],
      "prPriority": 5,
      "minimumReleaseAge": null,
      "minor": {
        "description": "A minor bump to an internal dependency should cause a minor bump in this package's version",
        "semanticCommitType": "feat"
      },
      "patch": {
        "description": "A patch bump to an internal dependency should cause a patch bump in this package's version",
        "semanticCommitType": "fix"
      }
    },
    {
      "description": "group eslint-config-scratch with other eslint packages that often must be upgraded together",
      "groupName": "eslint-config-scratch",
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "matchPackageNames": [
        "eslint-config-scratch",

        "@babel/eslint-parser",
        "babel-eslint",
        "eslint",
        "eslint-plugin-*"
      ]
    }
  ]
}
